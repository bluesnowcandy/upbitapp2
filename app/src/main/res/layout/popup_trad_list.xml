<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_frame_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">
    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="BTC TRAD LIST"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp" />
    </LinearLayout>

    <!-- //end 타이틀바 -->




    <!-- 지갑내용 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/configcurrency"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="#4CAF50"
            android:gravity="center"
            android:text="BTC"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="#ff7a00"
            android:gravity="right|center"
            android:text="1000.0024"
            android:id="@+id/configcurrency_bal"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/configcurrency1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff7a00"
            android:gravity="center"
            android:text="BTC"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>




    <!-- //end 리스트 -->



    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="10dp" />



    <!-- 1H -->
    <LinearLayout
        android:padding="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="1H"
            android:textSize="20dp"
            android:background="#8BC34A"
            android:id="@+id/config_chk1h"/>


        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="매수"
            android:textSize="20dp"
            android:background="#8BC34A"
            android:id="@+id/config_chk1h"/>


        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="10,000.00"
            android:textSize="20sp"
            android:id="@+id/config_sel_cnt1_h1"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="#8E24AA"
            android:gravity="right|center_vertical"
            android:background="#8BC34A"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="BTC"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="bottom|right"
            android:background="#8BC34A"
            android:layout_width="30dp"
            android:layout_height="match_parent" />
        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="10,000.00"
            android:textSize="20sp"
            android:id="@+id/config_sel_cnt1_h1"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="#8E24AA"
            android:gravity="right|center_vertical"
            android:background="#8BC34A"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="원"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="bottom|right"
            android:background="#8BC34A"
            android:layout_width="30dp"
            android:layout_height="match_parent" />


    </LinearLayout>



    <LinearLayout
        android:padding="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">


        <TextView
            android:text="2020.06.25 45시33분33초"
            android:textSize="15sp"
            android:textColor="#8E24AA"
            android:gravity="right|center_vertical"
            android:background="#8BC34A"
            android:layout_width="200dp"
            android:layout_height="match_parent" />

        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="완료"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="#8E24AA"
            android:gravity="right|center_vertical"
            android:background="#8BC34A"
            android:layout_width="100dp"
            android:layout_height="match_parent" />


    </LinearLayout>













    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="mOnSave"
            android:padding="16dp"
            android:text="저장"
            android:textColor="#ff7a00"
            android:textSize="15sp" />

        <Button
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="mOnClose"
            android:padding="16dp"
            android:text="닫기"
            android:textColor="#ff7a00"
            android:textSize="15sp" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>
</RelativeLayout>
