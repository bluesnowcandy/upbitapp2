<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <TextView
            android:textColor="#111111"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="currency"
            android:background="#30CCCC"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/pop_wal_currency" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >



                <TextView
                    android:textColor="#111111"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="side"
                    android:background="#5024A8"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:id="@+id/pop_wal_side" />

                <TextView
                    android:id="@+id/pop_wal_state"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="#8183F6"
                    android:gravity="center"
                    android:text="state"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#111111"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/pop_wal_created_at"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#43A047"
                    android:gravity="left"
                    android:text="2020/8/26 22:42:23"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#111111"
                    android:textSize="15dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/pop_wal_volume"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="#E53935"
                    android:gravity="left"
                    android:text="1000.22"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#111111"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/pop_wal_price"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="#C0CA33"
                    android:gravity="left"
                    android:text="1000.221"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#111111"
                    android:textSize="20dp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
