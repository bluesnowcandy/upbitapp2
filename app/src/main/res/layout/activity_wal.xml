<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wal.walActivity">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout

        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="10dp"
            android:height="30dp"
            android:id="@+id/tt"
            android:text=""
            android:background="#AE0ABA"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="10dp"
            android:height="30dp"
            android:id="@+id/tv_wal_order_list_pop"
            android:text=""
            android:background="#FB8C00"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <LinearLayout

        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/krwwon"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:text="지갑확인" />

        <TextView
            android:id="@+id/serchdtm"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="조회시간" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:height="20dp"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />





    <!--// 풋터 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#43A047"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#C0CA33"
            android:gravity="center"
            android:padding="16dp"
            android:text="orderlist"
            android:onClick="all_order_list_pop"
            android:textColor="#ff7a00"
            android:textSize="15sp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#00ACC1"
            android:gravity="center"
            android:onClick="getVlist"
            android:padding="16dp"
            android:text="vlist"
            android:textColor="#ff7a00"
            android:textSize="15sp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#267EA8"
            android:gravity="center"
            android:padding="16dp"
            android:text="mom"
            android:textColor="#ff7a00"
            android:textSize="15sp" />
        <Button
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#FFB300"
            android:gravity="center"
            android:padding="16dp"
            android:text="config"
            android:onClick="movereg"
            android:textColor="#ff7a00"
            android:textSize="15sp" />


    </LinearLayout>
    <!--// 풋터 -->
</LinearLayout>


</RelativeLayout>